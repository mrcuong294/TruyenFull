<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_widget_block_vg_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/space_12"
    android:orientation="vertical"
    android:background="@drawable/ds_widget_books_block_bg_item_1"
    android:foreground="?android:attr/selectableItemBackground"
    tools:layout_gravity="center">

    <TextView
        style="@style/AppTheme.Text.Caption"
        android:id="@id/book_time_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_32"
        android:layout_marginLeft="@dimen/space_32"
        android:layout_marginEnd="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:textColor="@color/green500"
        android:textStyle="italic"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="59 phút trước"/>

    <TextView
        style="@style/AppTheme.Text.Body.Bold"
        android:id="@id/book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_4"
        android:layout_marginStart="@dimen/space_32"
        android:layout_marginLeft="@dimen/space_32"
        android:layout_marginEnd="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_below="@id/book_time_update"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="Truyền thuyết Tru tiên thanh vân chí"/>

    <TextView
        style="@style/AppTheme.Text.Caption"
        android:id="@id/book_ctg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_4"
        android:layout_marginStart="@dimen/space_32"
        android:layout_marginLeft="@dimen/space_32"
        android:layout_marginEnd="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_below="@id/book_name"
        android:textColor="@color/text_light_2"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Chương 1200 | Ngôn Tình, Truyện Teen"/>

    <LinearLayout
        android:id="@+id/item_widget_block_vg_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8"
        android:layout_marginBottom="@dimen/space_12"
        android:layout_marginStart="@dimen/space_32"
        android:layout_marginLeft="@dimen/space_32"
        android:layout_marginEnd="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:orientation="horizontal"
        android:layout_below="@+id/book_ctg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            style="@style/AppTheme.Text.Caption.Tiny"
            android:id="@id/book_label_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_4"
            android:layout_marginRight="@dimen/space_4"
            android:minWidth="24dp"
            android:gravity="center"
            android:padding="@dimen/space_2"
            android:background="@color/green50"
            android:textColor="@color/text_light_1"
            android:text="@string/book_label_full"/>

        <TextView
            style="@style/AppTheme.Text.Caption.Tiny"
            android:id="@id/book_label_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="24dp"
            android:layout_marginEnd="@dimen/space_4"
            android:layout_marginRight="@dimen/space_4"
            android:padding="@dimen/space_2"
            android:gravity="center"
            android:background="@color/blue50"
            android:textColor="@color/text_light_1"
            android:text="@string/book_label_new"/>

        <TextView
            style="@style/AppTheme.Text.Caption.Tiny"
            android:id="@id/book_label_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="24dp"
            android:layout_marginEnd="@dimen/space_4"
            android:layout_marginRight="@dimen/space_4"
            android:gravity="center"
            android:padding="@dimen/space_2"
            android:background="@color/red50"
            android:textColor="@color/text_light_1"
            android:text="@string/book_label_hot"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/space_32"
        android:layout_marginLeft="@dimen/space_32"
        android:layout_marginEnd="@dimen/space_8"
        android:layout_marginRight="@dimen/space_8"
        android:layout_below="@+id/item_widget_block_vg_label"
        android:background="@color/divider_light"/>

</RelativeLayout>